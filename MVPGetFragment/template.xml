<?xml version="1.0"?>
<template
    format="2"
    revision="2"
    name="Get Data Fragment"
    minApi="7"
    minBuildApi="14"
    description="MVP Fragment">

    <category value="MVP Fragment" />
    <formfactor value="Mobile" />
<parameter
            id="isAndroidX"
            name="是否使用AndroidX"
            type="boolean"
            default="true"
            help="如果使用AndroidX的话，会将相应的support包替换为AndroidX"/>



<parameter
        id="DevloperName"
        name="开发人员姓名"
        type="string"
        suggest=""
        default=""
        help="填入你的名字，将会出现在文件的注释中" />
    <parameter
        id="fragmentClass"
        name="Fragment Name"
        type="string"
        constraints="class|nonempty|unique"
        default="BlankFragment"
        help="Fragment Name" />

    <parameter
        id="layoutName"
        name="layout Name"
        type="string"
        constraints="layout|unique|nonempty"
        suggest="fragment_${classToResource(fragmentClass)}"
        default="fragment_blank"
        help="layout Name" />


    <parameter
            id="fragmentTitle"
            name="fragment Title"
            type="string"
            constraints="nonempty"
            default="MainActivity"
            suggest="${fragmentClass}"
            help="Fragment title or description"/>

    <parameter
        id="packageName"
        name="package Name"
        type="string"
        constraints="package"
        default="com.mycompany.myapp" />



    <parameter
        id="presenterClass"
        name="Presenter Name"
        type="string"
        constraints="class|nonempty|unique"
        default="MainPresenter"
        suggest="${underscoreToCamelCase(classToResource(fragmentClass))}Presenter"
        help="Presenter Name" />


    <parameter
        id="ParamClass"
        name="Param Class"
        type="string"
        constraints="class|nonempty|unique"
        default="MainParam"
        suggest="${underscoreToCamelCase(classToResource(fragmentClass))}Param"
        help="Param Class" />

    <parameter
        id="ParamPackageName"
        name="Param Package Name"
        type="string"
        constraints="package"
        default="com.yida.cloud.merchants.entity.param"
        help="create in the package" />





    <parameter
        id="BeanClass"
        name="Bean Name"
        type="string"
        constraints="class|nonempty|unique"
        default="MainBean"
        suggest="${underscoreToCamelCase(classToResource(fragmentClass))}Bean"
        help="Bean Name" />


    <parameter
        id="BeanPackageName"
        name="Bean package"
        type="string"
        constraints="package"
        help="Bean package"
        default="com.yida.cloud.merchants.entity.bean" />
        <!-- 实体类存放的位置-->

        <parameter
                id="modlueName"
                name="Modlue Name"
                type="string"
                default=""
                help="模块名称，主要用来创建资源的时候命名。"/>




    <globals file="globals.xml.ftl" />
    <execute file="recipe.xml.ftl" />

</template>
